{
    "swagger": "2.0",
    "info": {
        "description": "This is a sample server for the message service.",
        "title": "Message Service API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/get-sent-messages": {
            "get": {
                "description": "Getting all messages that are sent",
                "tags": [
                    "Service"
                ],
                "summary": "Getting all messages that are sent",
                "responses": {
                    "200": {
                        "description": "Messages ",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/startstop": {
            "get": {
                "description": "Starts or stops the message sending service that sends messages every 2 minutes by sending the action in query",
                "tags": [
                    "Service"
                ],
                "summary": "Starts and stops the message service",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Action to perform: 'start' or 'stop'",
                        "name": "action",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Service started",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}